{
  "envs": ["browser", "webextensions"],
  "space": 2,
  "plugins": ["svelte3"],
  "rules": {
    "import/no-unassigned-import": "off",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 2,
        "maxEOF": 1
      }
    ],
    "no-new": "off",
    "unicorn/better-regex": "off",
    "unicorn/filename-case": "off"
  },
  "overrides": [
    {
      "files": "**/*.svelte",
      "processor": "svelte3/svelte3"
    }
  ],
  "ignore": [
    "Script.js"
  ]
}
