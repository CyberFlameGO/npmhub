{
  "private": true,
  "author": "zeke",
  "license": "MIT",
  "scripts": {
    "test": "run-p xo build",
    "xo": "xo",
    "build": "webpack --mode=production",
    "watch": "webpack --mode=development --watch",
    "version": "dot-json distribution/manifest.json version $VER",
    "release:cws": "webstore upload --source=distribution --auto-publish",
    "release:amo": "web-ext-submit --source-dir distribution",
    "release": "VER=20$(daily-version) run-s build version release:*"
  },
  "xo": {
    "space": true,
    "rules": {
      "import/no-unassigned-import": 0
    },
    "envs": [
      "browser",
      "webextensions"
    ],
    "parserOptions": {
      "ecmaVersion": 2019
    }
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.2.0",
    "copy-webpack-plugin": "^6.0.3",
    "dot-json": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "size-plugin": "^2.0.1",
    "terser-webpack-plugin": "^3.0.7",
    "utc-version": "^2.0.2",
    "web-ext-submit": "^4.3.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "xo": "^0.32.1"
  },
  "dependencies": {
    "doma": "^3.0.1",
    "escape-goat": "^3.0.0",
    "github-injection": "^1.0.1",
    "hosted-git-info": "^3.0.5",
    "p-memoize": "^4.0.0",
    "select-dom": "^6.0.2",
    "webext-domain-permission-toggle": "^1.0.1",
    "webext-dynamic-content-scripts": "^6.0.4"
  }
}
